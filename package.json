{
  "name": "gradlr",
  "version": "1.0.7",
  "description": "Fastest way to run your gradle tasks",
  "license": "MIT",
  "repository": "cesarferreira/gradlr",
  "author": {
    "name": "Cesar Ferreira",
    "email": "cesar.manuel.ferreira@gmail.com",
    "url": "cesarferreira.com"
  },
  "bin": {
    "gradlr": "cli.js"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "xo && ava"
  },
  "files": [
    "cli.js"
  ],
  "keywords": [
    "cli-app",
    "gradle",
    "gradle tasks",
    "search"
  ],
  "dependencies": {
    "chalk": "^2.0.1",
    "cli-truncate": "^1.0.0",
    "esc-exit": "^1.0.0",
    "filehound": "^1.16.1",
    "has-flag": "^2.0.0",
    "inquirer": "^3.0.3",
    "inquirer-autocomplete-prompt": "^0.7.0",
    "md5-file": "^3.1.1",
    "meow": "^3.3.0",
    "ora": "^1.3.0",
    "update-notifier": "^2.2.0"
  },
  "devDependencies": {
    "ava": "*",
    "execa": "^0.6.0",
    "xo": "*"
  },
  "xo": {
    "semicolon": true,
    "capitalized-comments": [
      "error",
      "never",
      {
        "line": {
          "ignorePattern": "pragma"
        },
        "ignoreInlineComments": true,
        "ignoreConsecutiveComments": true
      }
    ]
  }
}
